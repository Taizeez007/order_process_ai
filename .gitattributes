# Set the default behavior, in case people don't have core.autocrlf set.
* text=auto

# Force text files to have CRLF line endings.
*.sh text eol=crlf
*.py text eol=crlf
*.js text eol=crlf
*.html text eol=crlf
*.css text eol=crlf
*.txt text eol=crlf
*.md text eol=crlf
*.json text eol=crlf
*.xml text eol=crlf
*.yml text eol=crlf
*.yaml text eol=crlf
*.db text eol=crlf

# Denote binary files that should not be modified.
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pdf binary